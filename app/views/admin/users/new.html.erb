<h2>管理画面：ユーザー登録</h2>
<%= link_to 'ユーザ一覧', admin_users_path %>

<% if @user.errors.any? %>
  <div class="error_explanation">
    <h2>ユーザー登録時に下記<%= @user.errors.count %>件のエラーがありました。<br>ご確認のうえ、再度、登録をお願いいたします。</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <div class="name">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="email">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="admin">
    <%= f.label :admin %>
    <%= f.select :admin,[[false, false], [true, true]] %>
  </div>
  <div class="password">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="password_confirmation">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit %>
<% end %>
