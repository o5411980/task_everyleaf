<h2>タスク編集</h2>
<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div class="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_name">
    <%= form.label :task_name %>
    <%= form.text_field :task_name %>
  </div>
  <div class="task_detail">
    <%= form.label :detail %>
    <%= form.text_field :detail %>
  </div>
  <div class="task_deadline">
    <%= form.label :deadline %>
    <%= form.datetime_field :deadline %>
  </div>
  <div class="form-group" width="50">
    <%= form.label :status %>
    <%= form.select :status, [['未着手',1],['着手中',2],['完了',3]], {}, class: 'form-control', id: 'task_status'%>
  </div>
  <div class="form-group" width="50">
    <%= form.label :priority %>
    <%= form.select :priority, [['',0],['低',1],['中',2],['高',3]], {}, class: 'form-control', id: 'task_priority'%>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to 'task一覧', tasks_path, class: 'btn btn-primary' %>
