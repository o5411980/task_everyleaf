<!DOCTYPE html>
<html>
  <head>
    <title>TaskEveryleaf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="app-title navbar navbar-expand-md navbar-light bg-light">
      <div class="navbar-brand">
        TaskEveryLeaf
      </div>
    </div>
    <div class="container">
      <% if logged_in?%>
        <%= link_to "プロフィール", user_path(current_user.id), class: 'btn btn-default' %>
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: 'btn btn-default' %>
      <% else %>
        <%= link_to "ユーザー登録", new_user_path, class: 'btn btn-default' %>
        <%= link_to "ログイン", new_session_path, class: 'btn btn-default' %>
      <% end %>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
